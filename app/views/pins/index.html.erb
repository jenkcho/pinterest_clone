<%= render 'home/jumbo' if !user_signed_in? %>

<div class = "panel panel-primary">
    <div class = "panel-heading"><h1>Listing Pins</h1></div>
    <div class = "panel-body">

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

   <tbody>
    <div id="pins" class="transitions-enabled masonry">
          <% @pins.each do |pin| %>
      <div class ="box">
      <div class="panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %><br />
        <div class="panel-body">
        <%= pin.description %><br /><br>
        </div>
        <% if pin.user == current_user %>
        <div class="panel-footer">
        <%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-primary'%><span> </span>
        <%= link_to 'Destroy', pin, method: :delete, class: 'btn btn-primary', data: { confirm: 'Are you sure?' } %>
        </div>
        <% end %>
      </div>
      </div>
    <% end %>
    </div>
  </tbody>
</table>

<br>
</div>
<div class="panel-footer">
<%= link_to 'New Pin', new_pin_path, class: "btn btn-primary"%>
</div>

</div>