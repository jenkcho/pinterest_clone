<p id="notice"><%= notice %></p>

<div class = "panel panel-primary">
    <div class = "panel-heading"><h1>Listing Pins</h1></div>
    <div class = "panel-body">

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
        <%= pin.description %><br />
        <%= link_to image_tag(pin.image.url(:medium)), pin, class: 'btn btn-danger' %><br />
        <% if pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-danger'%><br />
        <%= link_to 'Destroy', pin, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %><br />
        <% end %>
    <% end %>
  </tbody>
</table>

<br>
</div>
<div class="panel-footer">
<%= link_to 'New Pin', new_pin_path, class: "btn btn-primary"%>
</div>

</div>